create database companyy;
use companyy;
create table employee(emp_id int,emp_name varchar (15), emp_salary int);
desc employee;
insert into employee values (1,"arun",10000),
(2,"rikshi",20000),
(3,"vijay",30000),
(4,"sharmi",40000);
select*from employee;
update employee set emp_name = "ezhil" where emp_id = 4;
alter table employee add email varchar (20); 
alter table employee drop email;
select @@autocommit;
set autocommit = off;
commit;
delete from employee where emp_id = 4;
savepoint sp4;
delete from employee where emp_id = 3;
savepoint sp3;

rollback to sp4;
select max(emp_salary) from employee;
select min(emp_salary) from employee;	
select avg(emp_salary) from employee;
select count(emp_salary) from employee;
select sum(emp_salary) from employee;
select * from employee order by emp_salary desc limit 1 offset 1;
select*from employee;
alter table employee add dep varchar (20);
update employee set dep = case
when emp_id = 1 then "hr"
when emp_id = 2 then "sql_dev"
else "unknow" 
end;


